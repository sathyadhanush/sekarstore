            </div>
          </div>
        </div>
      </div>
      <section class="products section container">
        <div class="sorter">
          <h2 class="fw-bold my-1 pt-3">{{ category.name }}</h2>
          <div class="btn-group">

            <button
              id="filter"
              class="btn btn-primary d-inline filter-trigger"
              data-bs-toggle="offcanvas"
              href="#offcanvasExample"
              role="button"
              aria-controls="offcanvasExample">
              Filter
            </button>
            <button
              class="btn btn-outline-dark dropdown-toggle"
              type="button"
              id="sortDropdown"
              data-bs-toggle="dropdown"
              aria-expanded="false">
              Sort by: Featured
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortDropdown">
              <li>
                <a class="dropdown-item" href="#">Default</a>
              </li>
              <li>
                <a class="dropdown-item" href="#">Name</a>
              </li>
              <li>
                <a class="dropdown-item" href="#">Price</a>
              </li>
              <li>
                <a class="dropdown-item" href="#">Brand</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="tab__items">
          <div class="tab__item active-tab">
            <div class="products__containers grid">
              {% for product in products %}
                <div class="product__item">
                  <div class="product__banner">
                    <a href="/products/{{ product.id }}" class="product__images">
                      <img
                        src="{{ product.media[0].url }}"
                        alt=""
                        class="product__img"
                        default>

                    </a>

                  </div>
                  <div class="product__content">
                    <a href="/products/{{ product.id }}">
                      <h3 class="product__title">{{ product.name }}</h3>
                    </a>

                    <div class="product__price flex">
                      <span class="new__price">₹{{ product.variants[0].price }}</span>
                      <span class="old__price">₹{{ product.variants[0].comparePrice }}</span>
                    </div>

                  </div>
                </div>
              {% endfor %}
            </div>
          </div>

        </div>
      </section>
    </div>
  </div>
{% endblock %}

{% block pagescripts %}
  <script>

    const FtoShow = '.filter';
    const Fpopup = document.querySelector(FtoShow);
    const Ftrigger = document.querySelector('.filter-trigger');
    Ftrigger.addEventListener('click', () => {
      setTimeout(() => {
        if (! Fpopup.classList.contains('show')) {
          Fpopup.classList.add('show')
        }
      }, 250)
    })
    document.addEventListener('click', (e) => {
      const isClosest = e.target.closest(FtoShow);
      if (! isClosest && Fpopup.classList.contains('show')) {
        Fpopup.classList.remove('show')
      }
    })

    function updateURL() {
      const checkedCheckboxes = document.querySelectorAll('.form-check-input:checked');
      const checkedValues = Array.from(checkedCheckboxes).map(checkbox => checkbox.nextElementSibling.textContent.trim());
      const categoryID = '{{category.id}}';

      const filterString = checkedValues.map(value => `Brand:${value}`).join('|');
      const newURL = `/categories/${categoryID}/?filter=${filterString}`;

      const applyButton = document.querySelector('.btn-primary');
      applyButton.href = newURL;
    }
    document.addEventListener('DOMContentLoaded', () => {
      const applyButton = document.querySelector('.btn-primary');
      applyButton.addEventListener('click', updateURL);
    });
  </script>
{% endblock %}