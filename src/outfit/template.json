{
    "theme_name": "Outfit",
    "theme_version": "1.0",
    "theme_author": "governor",
    "settings_schema": {
        "properties": {
            "banners": {
                "type": "Array",
                "max_length": 5,
                "items": {
                    "type": "Object",
                    "properties": {
                        "image_url": {
                            "type": "String",
                            "label": "Image URL",
                            "required": true,
                            "max_length": 255
                        },
                        "redirect_url": {
                            "type": "String",
                            "label": "Redirect URL",
                            "max_length": 500
                        }
                    }
                }
            },
            "features": {
                "type": "Array",
                "max_length": 4,
                "items": {
                    "type": "Object",
                    "properties": {
                        "image_url": {
                            "type": "String",
                            "label": "Image URL",
                            "required": true,
                            "max_length": 255
                        },
                        "description": {
                            "type": "String",
                            "label": "Description",
                            "required": true,
                            "max_length": 1000
                        }
                    }
                }
            },
            "additional_sections": {
                "type": "Array",
                "max_length": 2,
                "items": {
                    "type": "Object",
                    "properties": {
                        "title": {
                            "type": "String",
                            "label": "Title",
                            "required": true,
                            "max_length": 100
                        },
                        "image_url": {
                            "type": "String",
                            "label": "Image URL",
                            "max_length": 255
                        },
                        "content": {
                            "type": "String",
                            "label": "Content",
                            "required": true,
                            "max_length": 10000
                        }
                    }
                }
            }
        }
    }
}
