<div class="container px-4 mb-4">
  <div class="mb-5">
    <h2 class="h2 fw-semibold">{{ title }}</h2>
    <p>Choose from the collections of products</p>
  </div>
  <div class="row row-gap-5 row-cols-2 row-cols-lg-4 justify-content-lg-between justify-content-center">
    {% for product in products %}
      <a
        class="text-decoration-none text-black product mb-2 d-flex flex-column"
        href="/products/{{ product.id }}"
        style="border-radius: 4px">
        {% if product.media[0].url %}
          <div class="overflow-hidden">
            <img
              src="{{ product.media[0].url }}"
              class="product__image"
              class="img-fluid">
          </div>
        {% else %}
          <div style="height: 370px" class="d-flex flex-column text-white align-items-center bg-secondary-subtle justify-content-center">
            <ion-icon class="fs-1" name="image"></ion-icon>
            <span>No Image</span>
          </div>
        {% endif %}
        <div class="mt-3 mb-0 h6 product__title fw-bold">{{ product.name }}</div>
        <div class="mb-2">{{ product.variants[0].price | money_format }}</div>
        <button class="btn btn-outline-primary w-100 btn-lg mt-auto">Buy Now</button>
      </a>
    {% endfor %}
  </div>
</div>
