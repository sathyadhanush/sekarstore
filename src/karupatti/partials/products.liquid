<div class="container  mb-4 px-5">
  <div class="d-flex mb-3 align-items-center">
    <h2 class="h2 fw-semibold">{{title}}</h2>
    <a class="btn btn-lg btn-light rounded-5 ms-auto" href="/allproducts">
      View all
      <ion-icon class="fs-6 align-middle" name="arrow-forward-outline"></ion-icon>
    </a>
  </div>
  <div class="product-list-items">
    {% for product in products %}
      <a
        class="d-block flex-shrink-0 me-4 text-decoration-none text-black product-list-item"
        href="/products/{{ product.id }}"
        style="border-radius: 4px; max-width: calc(100% / 5)">
        {% if product.media[0].url %}
          <div>
            <img
              style="height: 370px"
              src="{{ product.media[0].url }}"
              class="img-fluid">
          </div>
        {% else %}
          <div style="height: 370px" class="d-flex flex-column text-white align-items-center bg-secondary-subtle justify-content-center">
            <ion-icon class="fs-1" name="image"></ion-icon>
            <span>No Image</span>
          </div>
        {% endif %}
        <div class="text-center mt-3 h5">{{ product.name }}</div>
        <div class="text-center">
          <span class="text-primary fw-bold">{{ product.variants[0].price | money_format }}</span>
          <span class="text-decoration-line-through text-muted">
            {{ product.variants[0].comparePrice | money_format }}
          </span>
         
        </div>
        <div class="d-flex justify-content-center mt-3">
          <button class="btn btn-primary-outline border border-1 fw-bold">Buy Now</button>
        </div>
      </a>
    {% endfor %}
  </div>
  <div class="d-flex justify-content-center">
    <button class="btn btn-lg btn-light rounded-circle me-2" id="scrollLeftButton">
      <ion-icon class="fs-6 align-middle" name="arrow-back-outline"></ion-icon>
    </button>
    <button class="btn btn-lg btn-light rounded-circle" id="scrollRightButton">
      <ion-icon class="fs-6 align-middle" name="arrow-forward-outline"></ion-icon>
    </button>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const productListItems = document.querySelector(".product-list-items");
    const scrollLeftButton = document.getElementById("scrollLeftButton");
    const scrollRightButton = document.getElementById("scrollRightButton");
    scrollLeftButton.addEventListener("click", function () {
      productListItems.scrollLeft -= 100; 
    });
    scrollRightButton.addEventListener("click", function () {
      productListItems.scrollLeft += 100; 
    });
  });
</script>